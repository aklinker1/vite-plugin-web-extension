{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "{{chrome}}.action": {
    "default_popup": "pages/popup.html"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "pages/popup.html"
  },
  "background": {
    "{{chrome}}.service_worker": "pages/background.ts",
    "{{firefox}}.scripts": ["pages/background.ts"]
  }
}
